<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:padding="30dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/traineeId_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idtrainee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback Title: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fd_feedback_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trainee_name_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_trainee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class ID: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fd_class_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/class_id_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Name: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fd_class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="Class 1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Module ID: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fd_module_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="Class 1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Module Name: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fd_module_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="Class 1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fd_time_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="Class 1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fd_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="Class 1" />


        </LinearLayout>


    </LinearLayout>
    <ImageButton
        android:id="@+id/fd_btn_exe"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_circle_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_content"
        app:layout_constraintBottom_toBottomOf="@id/layout_content"
        android:src="@drawable/ic_baseline_remove_red_eye_24"
        />
</androidx.constraintlayout.widget.ConstraintLayout>